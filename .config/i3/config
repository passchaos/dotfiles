# Audio keys
bindsym XF86AudioRaiseVolume exec "amixer -D pulse sset Master 2%+ && dzvol -bg '#000000' -fg '#FFFFFF' -fn 'GohuFont 10' -x 1670 -y 30"
bindsym XF86AudioLowerVolume exec "amixer -D pulse set Master 2%- && dzvol -bg '#000000' -fg '#FFFFFF' -fn 'GohuFont 10' -x 1670 -y 30"
bindsym XF86AudioMute exec "amixer set Master toggle && dzvol -bg '#000000' -fg '#FFFFFF' -fn 'GohuFont 10' -x 1670 -y 30"
# MPD controls
