d
#
# bspwm hotkeys
#

super + alt + Escape
	bspc quit

super + w
	bspc window -c

super + alt + x
	bspc window -k

super + t
	bspc desktop -l next

super + b
	bspc desktop -B

super + {s,f}
	bspc window -t {floating,fullscreen}

super + {grave,Tab}
	bspc {window,desktop} -f last

super + apostrophe
	bspc window -s last

super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc window -w last.manual

super + m
	bspc window -s biggest

super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

super + {_,shift + }c
	bspc window -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

#super + bracket{left,right}
super + {a,d}
	bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
	bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

super + r
    bspc desktop -R 90

#
# wm independent hotkeys
#

super + Return
	urxvt

super + x
	urxvt

# Use xfontsel if you're using vanilla dmenu.
# Also, dmenu-xft package is recommended and can be installed from AUR.
super + space
	dmenu_run -fn lemon-8 -nb '#000000' -nf '#ffffff' -sb '#42717B' -l 0 -p "Executar: " 

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Resize floating windows
super + alt + {Left,Right,Up,Down}
    xdo move {-x -30,-x +30,-y -30,-y +30}

# Lock screen
ctrl + alt + l
#    gnome-screensaver-command -l
     dm-tool lock
#
# System
#

# Raises volume
XF86AudioRaiseVolume
    amixer -D pulse sset Master 2%+ && dzvol -bg '#000000' -fg '#FFFFFF' -fn 'lemon 9' -x 1670 -y 30

# Lowers volume
XF86AudioLowerVolume
    amixer -D pulse set Master 2%- && dzvol -bg '#000000' -fg '#FFFFFF' -fn 'lemon 9' -x 1670 -y 30

# Mutes
XF86AudioMute
    amixer set Master toggle && dzvol -bg '#000000' -fg '#FFFFFF' -fn 'lemon 9' -x 1670 -y 30

# Brightness goes up
XF86MonBrightnessUp
    brightnessScript

# Brightness goes down
XF86MonBrightnessDown
    brightnessScript

# Screen lock
XF86ScreenSaver
    blur

# Turns off laptop
XF86Launch1
    systemctl poweroff

# Logoff
super + alt + Escape
    bspc quit

# MPD controls

# Pause/Play
XF86AudioPlay
    mpc toggle

# Previous song
XF86AudioPrev
    mpc prev

# Next song
XF86AudioNext
    mpc next

# Print screen
Print
    scrot

alt + Print
    scrot -u

# Toggle touchpad on and off
XF86TouchpadToggle
   toggle_touchpad 

# Change size of all windows on current desktop
super + alt + minus
    bspc config -d focused right_padding $((`bspc config -d focused right_padding` + 20 )); \
    bspc config -d focused left_padding $((`bspc config -d focused left_padding` + 20 )); \
    bspc config -d focused bottom_padding $((`bspc config -d focused bottom_padding` + 20 )); \
    bspc config -d focused top_padding $((`bspc config -d focused top_padding` + 20 ));

super + alt + equal
    bspc config -d focused right_padding $((`bspc config -d focused right_padding` - 20 )); \
    bspc config -d focused left_padding $((`bspc config -d focused left_padding` - 20 )); \
    bspc config -d focused bottom_padding $((`bspc config -d focused bottom_padding` - 20 )); \
    bspc config -d focused top_padding $((`bspc config -d focused top_padding` - 20 ));

alt + {minus,equal}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))
